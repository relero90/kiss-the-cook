{{#if loggedIn}}
  <div class="card text-center d-flex justify-content-center mx-auto m-5 w-50">
    <h2 class="card-header recipe-title">{{recipe.title}}</h2>
    <h5 class="username mt-3 card-title">By: @{{recipe.user.username}}</h5>
    <div class="card-body d-flex flex-column align-items-start">
      {{#if recipe.image}}
        <img
          src="{{recipe.image}}"
          alt="Picture of food"
          class="card-img-top"
        />
      {{else}}
        <img
          src="https://cdn.pixabay.com/photo/2017/06/06/22/37/italian-cuisine-2378729_1280.jpg"
          alt="No image available"
          class="card-img-top"
          recipe_id={{id}}
        />
      {{/if}}
      <ul class="card-text">
        <h3 class="text-left mt-4">Ingredients:</h3>
        {{#each ingredients as |ingredient|}}
          <li class="text-left">{{ingredient}}</li>
        {{/each}}<!-- dynamically create list items here from array -->
      </ul>
      <ol class="card-text">
        <h3 class="text-left">Steps:</h3>
        {{#each steps as |step|}}
          <li class="text-left">{{step}}</li>
        {{/each}}<!-- dynamically create list items here from other array -->
      </ol>
      {{! <img
      src="https://cdn.pixabay.com/photo/2017/11/07/20/16/kiss-2928081_960_720.png" class = "btn img-responsive mt-auto ml-auto" id="kissBtn"
    ></img> }}
    </div>
    <div class="card-footer text-muted">
    </div>

    <!-- Button trigger modal -->
    <button
      type="button"
      class="delete btn text-light bg-custom-2 m-3 hidden"
      data-toggle="modal"
      data-target="#confirmModal"
    >
      Delete Recipe
    </button>

    <!-- Modal -->
    <div
      class="modal fade"
      id="confirmModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-center" id="exampleModalLabel">Are you
              sure?</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            This cannot be undone.
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn bg-custom text-light"
              data-dismiss="modal"
            >Cancel</button>
            <button
              type="button"
              class="btn delete-confirm bg-custom-2 text-light"
            >Permanently Delete Recipe</button>
          </div>
        </div>
      </div>
    </div>
    {{! modal break }}
  </div>

  <script src="/js/render-delete-btn.js"></script>
  <script src="/js/delete-recipe.js"></script>
{{else}}
  <a class="text-center m-4" href="/">You must login first to view this page.</a>
{{/if}}